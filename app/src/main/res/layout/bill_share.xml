        android:inputType="text"
        android:editable="true"
        android:imeOptions="actionDone"
        android:paddingBottom="5.0dip"
        android:paddingLeft="15.0dip"
        android:paddingRight="5.0dip"
        android:paddingTop="5.0dip"
        android:singleLine="true"
        android:textColor="@color/add_user_number_edit_text_selector"
        android:textColorHint="#4c000000"
        android:textSize="16.0dip"/>

    <EditText
        android:id="@+id/sender_pin"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_marginBottom="15.0dip"
        android:layout_marginLeft="22.0dip"
        android:layout_marginRight="22.0dip"
        android:layout_marginTop="15.0dip"
        android:background="@drawable/bg_payment_surround_box"
        android:drawablePadding="15.0dip"
        android:hint="Sender PIN"
        android:inputType="numberPassword"
        android:imeOptions="actionDone"
        android:paddingBottom="5.0dip"
        android:paddingLeft="15.0dip"
        android:paddingRight="5.0dip"
        android:paddingTop="5.0dip"
        android:singleLine="true"
        android:textColor="@color/add_user_number_edit_text_selector"
        android:textColorHint="#4c000000"
        android:textSize="16.0dip"/>

    <EditText
        android:id="@+id/amount"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_marginBottom="15.0dip"
        android:layout_marginLeft="22.0dip"
        android:layout_marginRight="22.0dip"
        android:layout_marginTop="15.0dip"
        android:background="@drawable/bg_payment_surround_box"
        android:drawablePadding="15.0dip"
        android:hint="Amount"
        android:inputType="number"
        android:imeOptions="actionDone"
        android:paddingBottom="5.0dip"
        android:paddingLeft="15.0dip"
