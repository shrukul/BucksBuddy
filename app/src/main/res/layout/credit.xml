<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <EditText
        android:id="@+id/input_credit"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_marginBottom="15.0dip"
        android:layout_marginLeft="22.0dip"
        android:layout_marginRight="22.0dip"
        android:layout_marginTop="15.0dip"
        android:background="@drawable/bg_payment_surround_box"
        android:drawableLeft="@drawable/piggy"
        android:drawablePadding="15.0dip"
        android:hint="Credit Money"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:paddingBottom="5.0dip"
        android:paddingLeft="15.0dip"
        android:paddingRight="5.0dip"
        android:paddingTop="5.0dip"
        android:singleLine="true"
        android:textColor="@color/add_user_number_edit_text_selector"
        android:textColorHint="#4c000000"
        android:textSize="16.0dip" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_credit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="22.0dip"
        android:layout_marginRight="22.0dip"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:text="Credit"
        android:textColor="@color/white" />

</LinearLayout>